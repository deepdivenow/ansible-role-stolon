[Unit]
Description=stolon-proxy
 
[Service]
Type=simple
Restart=always
RestartSec=5s
LimitNOFILE=40000
TimeoutStartSec=0
User={{ stolon_sentinel_user }}

ExecStart={{ stolon_unarchive_prefix }}/bin/stolon-proxy --cluster-name={{ stolon_cluster_name }} \
          --store-backend={{ stolon_store_backend }} \
          --store-endpoints={{ stolon_store_endpoints }} \
          --listen-address {{ stolon_proxy_listen }} --port {{ stolon_proxy_port }}

[Install]
WantedBy=multi-user.target

